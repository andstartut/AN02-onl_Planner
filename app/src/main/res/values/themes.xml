<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AN02ONL_PlannerApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/note_yellow_rich</item>
        <item name="colorPrimaryVariant">@color/note_yellow</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/note_brown</item>
        <item name="colorSecondaryVariant">@color/note_brown_lite</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/myActionBarStyle</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="myActionBarStyle" parent="Theme.MaterialComponents.DayNight">
        <item name="titleTextColor">@color/note_pink</item>
    </style>

    <style name="FAB" parent="Widget.AppCompat.Button">
        <item name="colorSecondary">@color/note_yellow_rich</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="switchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="colorAccent">@color/note_yellow_rich</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="materialToolbar_titleText" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:text">@string/account_settings</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>