<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@+id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="io.techmeskills.an02onl_plannerapp.screen.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/toMainFragment"
            app:destination="@+id/mainFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/alpha_up"
            app:exitAnim="@anim/alpha_down"
            app:popEnterAnim="@anim/alpha_up"
            app:popExitAnim="@anim/alpha_down"/>
        <action
            android:id="@+id/toNewAccountFragment"
            app:destination="@id/NewAccountFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"
            app:enterAnim="@anim/alpha_up"
            app:exitAnim="@anim/alpha_down"
            app:popEnterAnim="@anim/alpha_up"
            app:popExitAnim="@anim/alpha_down"/>
    </fragment>
    <fragment
        android:id="@+id/mainFragment"
        android:name="io.techmeskills.an02onl_plannerapp.screen.main.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/toNoteDetailsFragment"
            app:destination="@id/noteDetailFragment"
            />
        <action
            android:id="@+id/toAccountSettingsFragment"
            app:destination="@id/accountSettingsFragment"
            app:enterAnim="@anim/alpha_up"
            app:exitAnim="@anim/alpha_down"
            app:popEnterAnim="@anim/alpha_up"
            app:popExitAnim="@anim/alpha_down" />
    </fragment>
    <fragment
        android:id="@+id/NewAccountFragment"
        android:name="io.techmeskills.an02onl_plannerapp.screen.account.NewAccountFragment"
        android:label="NewAccountFragment"
        tools:layout="@layout/fragment_new_account">
        <action
            android:id="@+id/toMainFragment"
            app:destination="@id/mainFragment" />
        <argument
            android:name="etNewAccount"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="tbNewAccount"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/noteDetailFragment"
        android:name="io.techmeskills.an02onl_plannerapp.screen.noteDetails.NoteDetailsFragment"
        android:label="NoteDetailsFragment"
        tools:layout="@layout/fragment_note_details">
        <argument
            android:name="note"
            app:argType="io.techmeskills.an02onl_plannerapp.database.model.Note"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/accountSettingsFragment"
        android:name="io.techmeskills.an02onl_plannerapp.screen.account.AccountSettingsFragment"
        android:label="AccountSettingsFragment"
        tools:layout="@layout/fragment_account_settings">
        <action
            android:id="@+id/toNewAccountFragment"
            app:destination="@id/NewAccountFragment"
            app:enterAnim="@anim/alpha_up"
            app:exitAnim="@anim/alpha_down"
            app:popEnterAnim="@anim/alpha_up"
            app:popExitAnim="@anim/alpha_down"/>
    </fragment>
</navigation>